    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d config/database/orm.config.ts",
    "migration:generate": "yarn run typeorm migration:generate",
    "migration:create": "typeorm migration:create ",
    "migration:run": " yarn run build && yarn run typeorm migration:run",
    "seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs ",
    "seed:make": "yarn run build && yarn run seed seed:run -d config/database/orm.config.ts"
